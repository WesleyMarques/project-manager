{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./build/",
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es2017",
        "esModuleInterop": true,
        "sourceMap": true,
        "typeRoots": ["node_modules/@types", "sequelize/types"],
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "src/components/**/*.spec.ts"]
}
